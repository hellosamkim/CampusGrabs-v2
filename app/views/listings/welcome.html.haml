#welcome-wrapper
  #welcome-bg
  .logo-wrapper
    = link_to listings_path, id: "logo-path" do
      .logo
  %section.text-animation
    #welcome-sentences
      %span#sentences
    #search-sentences
      = form_tag search_path, method: :get, id: 'search-query' do
        = text_field_tag :q, nil, id: 'sentences'
        = submit_tag "Search", :style => "display: none;"
  %section.user-auth
    = link_to listings_path do
      .get-started
        Get Started
    .login
      %h2 Member Login
      %form.form-inline
        = simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
          .form-group
            .input-group
              .input-group-addon 
                %i{class: "fa fa-envelope-o"}
              = f.input :email, required: true, label: false, placeholder: "Email"
          .form-group
            .input-group
              .input-group-addon
                %i{class: "fa fa-lock"}
              = f.input :password, required: true, label: false, placeholder: "•••••••••"
          .input-group{style: "display: block; margin-top: 10px;"}
            = f.button :submit, "Log In"           
